<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#00aced">
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/me"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="#00aced"/>

    <LinearLayout 
        android:id="@+id/headimage_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:orientation="vertical">
        
	    <com.tokool.earphone.customview.RoundCornerImageView
	        android:id="@+id/iv_headimage"
	        android:layout_width="120dp"
	        android:layout_height="120dp"
	        android:src="@drawable/default_headimage"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/mine_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headimage_layout"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/btn_target"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/mine_target"/>
        
        <View 
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        
        <ImageView 
            android:id="@+id/btn_message"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/mine_message"/>
        
        <View 
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        
        <ImageView 
            android:id="@+id/btn_setting"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/mine_setting"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_layout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/target_settings"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
        
        <View 
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        
        <TextView 
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/personal_message"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
        
        <View 
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        
        <TextView 
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/settings"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
        
    </LinearLayout>

</RelativeLayout>
