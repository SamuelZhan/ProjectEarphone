<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.tokool.earphone"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:background="@drawable/shape_loading_dialog_bg"
    android:orientation="vertical" >
     
    <com.tokool.bra.customview.CircleProgress 
        android:id="@+id/dialog_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        custom:circleColor="#ffffff"/>
    
    <TextView
        android:id="@+id/loading_dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/dialog_progress"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#55DFC0"/>

</RelativeLayout>
