<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.tokool.earphone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ruler_layout1"
        android:layout_width="70dp"
        android:layout_height="290dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
           android:layout_marginRight="80dp"
	    android:background="@drawable/shape_ruler">
        
	    <com.tokool.earphone.customview.Ruler
	        android:id="@+id/ruler_height"
	        android:layout_width="60dp"
	        android:layout_height="280dp"
	        android:layout_centerInParent="true"
	        android:background="#ffffff"
	        custom:orientation="vertical"
	        custom:fromValue="130"
	        custom:toValue="220"
	        custom:intervalsBetweenValues="10"
	        custom:valuesInterval="10"
	        custom:interval="5dp"
	        custom:linesColor="#33000000"
	        custom:linesWidth="4px"
	        custom:valuesTextSize="12sp"/>
       
   	</RelativeLayout>
       
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginRight="10dp"
     	android:layout_toLeftOf="@id/ruler_layout1"
        android:orientation="horizontal">
        
	     <TextView 
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="@string/height"
	         android:textSize="18sp"
	         android:textColor="#ffffff"/>
	        
	     <TextView
	         android:id="@+id/tv_height"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginRight="8dp"
	         android:layout_marginLeft="8dp"
	         android:textSize="24sp"
	         android:textColor="#000000"/>
	     
	     <TextView 
	         android:id="@+id/tv_height_unit"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="cm"
	         android:textSize="18sp"
	         android:textColor="#ffffff"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ruler_layout1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        
	     <TextView 
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="@string/weight"
	         android:textSize="18sp"
	         android:textColor="#ffffff"/>
	        
	     <TextView
	         android:id="@+id/tv_weight"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginRight="8dp"
	         android:layout_marginLeft="8dp"
	         android:textSize="24sp"
	         android:textColor="#000000"/>
	     
	     <TextView 
	         android:id="@+id/tv_weight_unit"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="kg"
	         android:textSize="18sp"
	         android:textColor="#ffffff"/>
    </LinearLayout>
    
   <RelativeLayout
        android:id="@+id/ruler_layout2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/ruler_layout1"
        android:layout_centerHorizontal="true"
	    android:background="@drawable/shape_ruler">
        
	    <com.tokool.earphone.customview.Ruler
	        android:id="@+id/ruler_weight"
	        android:layout_width="240dp"
	        android:layout_height="50dp"
	        android:layout_centerInParent="true"
	        android:background="#ffffff"
	        custom:fromValue="30"
	        custom:toValue="150"
	        custom:intervalsBetweenValues="10"
	        custom:valuesInterval="10"
	        custom:interval="5dp"
	        custom:linesColor="#33000000"
	        custom:linesWidth="4px"
	        custom:valuesTextSize="12sp"/>
        
    </RelativeLayout>     

</RelativeLayout>
